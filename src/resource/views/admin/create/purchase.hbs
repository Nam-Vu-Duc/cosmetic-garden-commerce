<div class="admin-create-purchase-container">
  <div id="form">
    <div class="form-title"><p>Thêm đơn nhập mới</p></div>

    <div class="form-group">
      <label for="purchaseDate">Ngày nhập *</label>
      <input type="date" id="purchaseDate" name="purchaseDate">
    </div>

    <div class="form-group">
      <label for="supplierId">Chọn nhà cung cấp</label>
      <select name="supplierId" id="supplierId">
        <option value="" selected disabled>-- Nhà cung cấp --</option>
      </select>
    </div>

    <div class="form-group">
      <label for="supplierId">Chọn đại lý</label>
      <select name="storeCode" id="storeCode">
        <option value="" selected disabled>-- đại lý --</option>
      </select>
    </div>

    <div class="form-group">
      <label for="note">Ghi chú</label>
      <input type="text" id="note" name="note">
    </div>

    <div class="form-group">
      <label>Chọn sản phẩm</label>
      <input type="text"  id="product-search" placeholder="Nhập tên sản phẩm">
    </div>

